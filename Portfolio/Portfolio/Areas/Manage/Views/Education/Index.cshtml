@model List<Education>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-action="Create" asp-controller="Education" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">SchoolName</th>
                <th scope="col">Degree</th>
                <th scope="col">PresentTime</th>
                <th scope="col">PastTime</th>
                <th scope="col">EducationName</th>
                <th scope="col">GpaDegree</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@item.SchoolName</td>
                    <td>@item.Degree</td>
                    <td>@item.PresentTime</td>
                    <td>@item.PastTime</td>
                    <td>@item.EducationName</td>
                    <td>@item.GpaDegree</td>

                    <td>
                        <a asp-action="Edit" asp-controller="Education" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="Education" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

