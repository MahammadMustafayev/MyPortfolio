@model HomeVM
@using Portfolio.Services
@inject MainServices service
@{
        Dictionary<string, string> settings = service.GetSettings();
}
@{
    ViewData["Title"] = "Home Page";
}

<!-- About-->
@foreach (var item in Model.Abouts)
{
    <section class="resume-section" id="about">
        <div class="resume-section-content">
            <h1 class="mb-0">
                @item.FirstName
                <span class="text-primary">@item.LastName</span>
            </h1>
            <div class="subheading mb-5">
                @settings["Address"]  , @settings["Contact"] ·
                <a href="@settings["EmailAddressUrl"]">@settings["EmailAddress"]</a>
            </div>
            <p class="lead mb-5">@item.Desc.</p>
            <div class="social-icons">
                <a class="social-icon" href="@settings["LinkEdnUrl"]"><i class="fab @settings["LinkEdin"]"></i></a>
                <a class="social-icon" href="@settings["GithubUrl"]"><i class="fab @settings["Github"]"></i></a>
                <a class="social-icon" href="@settings["TwitterUrl"]"><i class="fab @settings["Twitter"]"></i></a>
                <a class="social-icon" href="@settings["FaceBookUrl"]"><i class="fab @settings["FaceBook"]"></i></a>
            </div>
        </div>
    </section>
}

<hr class="m-0" />
<!-- Experience-->
<section class="resume-section" id="experience">
    <div class="resume-section-content">
        <h2 class="mb-5">Experience</h2>
        @foreach (var item in Model.Experiences)
        {
            <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                <div class="flex-grow-1">
                    <h3 class="mb-0">@item.WorkName</h3>
                    <div class="subheading mb-3">@item.CompanyName</div>
                    <p>@item.WorkDesc.</p>
                </div>
                <div class="flex-shrink-0"><span class="text-primary">@item.PastTime- @item.PresentTime</span></div>
            </div>
        }


    </div>
</section>
<hr class="m-0" />
<!-- Education-->
<section class="resume-section" id="education">
    <div class="resume-section-content">
        <h2 class="mb-5">Education</h2>
        @foreach (var item in Model.Educations)
        {
            <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                <div class="flex-grow-1">
                    <h3 class="mb-0">@item.SchoolName</h3>
                    <div class="subheading mb-3">@item.EducationName</div>
                    <div>@item.Degree</div>
                    <p>GPA: @item.GpaDegree</p>
                </div>
                <div class="flex-shrink-0"><span class="text-primary">@item.PastTime - @item.PresentTime</span></div>
            </div>
        }


    </div>
</section>
<hr class="m-0" />
<!-- Skills-->
<section class="resume-section" id="skills">
    <div class="resume-section-content">
        <h2 class="mb-5">Skills</h2>
        <div class="subheading mb-3">Programming Languages & Tools</div>
             <ul class="list-inline dev-icons">
                 @foreach (var item in Model.Skills)
                  {           
                     <li class="list-inline-item"><i class="fab @item.Icon"></i></li>
                  }
            </ul>
            <div class="subheading mb-3">Workflow</div>
            <ul class="fa-ul mb-0">
                @foreach (var item in Model.Skills)
                {
                    <li>
                        <span class="fa-li"><i class="fas fa-check"></i></span>
                        @item.WorkFlow
                    </li>
                }
            </ul>



    </div>
</section>
<hr class="m-0" />
<!-- Interests-->
<section class="resume-section" id="interests">
    <div class="resume-section-content">
        <h2 class="mb-5">Interests</h2>
        @foreach (var item in Model.Interests)
        {
            <p>@item.Title.</p>
            <p class="mb-0">@item.SubTitle.</p>
        }

    </div>
</section>
<hr class="m-0" />
<!-- Awards-->
<section class="resume-section" id="awards">
    <div class="resume-section-content">
        <h2 class="mb-5">Awards & Certifications</h2>
        <ul class="fa-ul mb-0">
            @foreach (var item in Model.Awards)
            {
                <li>
                    <span class="fa-li"><i class="fas fa-trophy text-warning"></i></span>
                   @(item.IsDeleted==false?item.CertificateName:"")
                </li>
            }


        </ul>
    </div>
</section>
